{
	"name": "yard/data",
	"type": "package",
	"description": "Powerful data objects for WordPress",
	"license": "MIT",
  "version": "1.0.0",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
      }
	},
	"require": {
		"php": "^8.1",
		"jgrossi/corcel": "^7.0",
		"spatie/laravel-data": "4.5.1"
	},
  "require-dev": {
		"10up/wp_mock": "^0.4.2",
		"larastan/larastan": "^2.0",
		"orchestra/testbench": "^8.23",
		"pestphp/pest": "^2.34",
		"szepeviktor/phpstan-wordpress": "^1.0"
	},
  "autoload": {
		"psr-4": {
			"Yard\\Data\\": "src/"
		}
	},
  "autoload-dev": {
		"psr-4": {
			"Yard\\Data\\Tests\\": "tests/"
		}
	},
  "scripts": {
		"analyse": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php",
			"vendor/bin/phpstan analyse --debug --memory-limit 1G"
		],
    "test": "vendor/bin/pest",
    "test:coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
	},
	"extra": {
		"acorn": {
			"providers": [
				"Yard\\Data\\Providers\\DataServiceProvider"
			],
			"aliases": {
				"Data": "Yard\\Data\\Facades\\Data"
			}
		}
	}
}
