{
	"name": "yard/data",
	"type": "package",
	"description": "Powerful data objects for WordPress",
	"license": "MIT",
  "version": "1.0.0",
  "config": {
    "sort-packages": true
	},
	"require": {
		"php": "^8.1",
		"spatie/laravel-data": "4.5.1"
	},
  "require-dev": {
		"larastan/larastan": "^2.0",
    "orchestra/testbench": "^8.23",
		"szepeviktor/phpstan-wordpress": "^1.0"
	},
  "autoload": {
		"psr-4": {
			"Yard\\Data\\": "src/"
		}
	},
  "scripts": {
		"analyse": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php",
			"vendor/bin/phpstan analyse --debug --memory-limit 1G"
		]
	},
	"extra": {
		"acorn": {
			"providers": [
				"Yard\\Data\\Providers\\DataServiceProvider"
			],
			"aliases": {
				"Data": "Yard\\Data\\Facades\\Data"
			}
		}
	}
}
