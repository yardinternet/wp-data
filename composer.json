{
  "name": "yard/data",
  "type": "package",
  "description": "Powerful data objects for WordPress",
  "license": "MIT",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "platform": {
      "php": "8.2"
    }
  },
  "support": {
    "source": "https://github.com/yardinternet/yard-data",
    "issues": "https://github.com/yardinternet/yard-data/issues"
  },
  "require": {
    "php": ">=8.2",
    "jgrossi/corcel": "^7.0",
    "spatie/laravel-data": "^4.5"
  },
  "require-dev": {
    "10up/wp_mock": "^0.4.2",
    "larastan/larastan": "^2.0",
    "orchestra/testbench": "^8.23",
    "pestphp/pest": "^2.34",
    "szepeviktor/phpstan-wordpress": "^1.0",
    "yard/php-cs-fixer-rules": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Yard\\Data\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Yard\\Data\\Tests\\": "tests/"
    }
  },
	"scripts": {
		"post-autoload-dump": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"
		],
		"all": [
			"@test",
			"@analyse",
			"@format"
		],
		"analyse": "vendor/bin/phpstan analyse --debug --memory-limit 1G",
		"format": "vendor/bin/php-cs-fixer fix",
		"test": "vendor/bin/pest",
		"test:coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
	},
  "extra": {
    "acorn": {
      "providers": [
        "Yard\\Data\\Providers\\DataServiceProvider"
      ],
      "aliases": {
        "Data": "Yard\\Data\\Facades\\Data"
      }
    }
  }
}
